<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
  
    <%= link_to image_tag("629805_s.jpg", class:"furima-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='lists-right'>
      <% if user_signed_in? %>
        <ul class='lists-right'>
            <li><%= link_to current_user.nickname, root_path, class: "user-nickname" %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        </ul>
        <% if current_user.admin? %>
          <ul class='lists-admin'>
            <li><%= link_to '管理者ページ', rails_admin_path, class: "user-admin" %></li>
            <li><%= link_to '商品出品', new_item_path, class: "user-admin" %></li>
          </ul>
        <% end %>
      <% else %>
        <ul class='lists-right'>
            <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
            <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
        </ul>
      <% end %>

  </div>
  <div class='nav'>
      <ul class='lists-left'>
        <li><%= link_to 'お得なセット', "#", class: "brand-list" %></li>
        <li><%= link_to 'お一人様メニュー', "#", class: "category-list" %></li>
        <li><%= link_to 'ファミリーメニュー', "#", class: "brand-list" %></li>
        <li><%= link_to '単品メニュー', "#", class: "brand-list" %></li>
      </ul>
  </div>
</header>